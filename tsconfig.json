{
    "compilerOptions": {
        "target": "es6",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "module": "esnext",
        "noEmit": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": true
    },
    "include": ["src"]
}
